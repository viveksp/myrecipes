<%= render 'shared/page_title', title: "#{@ingredient.name}" %>


<% if @ingredient.recipes.count != 0 %>
    <h4 align="center">Recipes containing <%=@ingredient.name %></h4>
    
    <div align="center">
        <%= will_paginate @ingredient_recipes %>
    </div>
    
    
    <%= render 'recipes/recipe', obj: @ingredient_recipes %>
    <!-- We could have said obj: @chef.recipes.. But then pagination cannot happen on that.. So in chef controller, show action, add another instance variable-->
    <!-- that can hold the paginated values of @chef_recipes  @chef_recipes = @chef.recipes.paginate(page: params[:page], per_page: 5) and loop through this-->
    
    <div align="center">
        <%= will_paginate @ingredient_recipes %>
    </div>

<% else %>
    <h4 align="center">No recipes yet!</h4>
<% end %>
