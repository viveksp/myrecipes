<%= render 'shared/page_title', title: "Chef #{@chef.chefname}'s profile" %>

<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <%= gravatar_for @chef, size: 150 %>
    </div>
</div>

<% if @chef.recipes.count != 0 %>
    <h4 align="center"><%=@chef.chefname %>'s recipes</h4>
    
    <div align="center">
        <%= will_paginate @chef_recipes %>
    </div>
    
    
    <%= render 'recipes/recipe', obj: @chef_recipes %>
    <!-- We could have said obj: @chef.recipes.. But then pagination cannot happen on that.. So in chef controller, show action, add another instance variable-->
    <!-- that can hold the paginated values of @chef_recipes  @chef_recipes = @chef.recipes.paginate(page: params[:page], per_page: 5) and loop through this-->
    
    <div align="center">
        <%= will_paginate @chef_recipes %>
    </div>

<% else %>
    <h4 align="center">No recipes yet!</h4>
<% end %>
