<%= render 'shared/errors', obj: @chef %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@chef, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :chefname, "Enter your name" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :chefname, class: "form-control", placeholder: "Enter your name", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter your email" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Choose your password" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password_confirmation,"confirm your password" %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, rows: 10, class: "form-control", placeholder: "Confirm your password" %>
        </div>
      </div>
      
      
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@chef.new_record? ? "Signup" : "Update", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    
    <% end %>
    
  
  </div>
</div>
